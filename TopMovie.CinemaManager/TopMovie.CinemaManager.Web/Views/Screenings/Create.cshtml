@model TopMovie.CinemaManager.Core.Features.Screenings.Models.Screening

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Screening</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
	        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	        <div class="form-group">
		        <label asp-for="CinemaHallId" class="control-label"></label>
		        <select asp-for="CinemaHallId" class ="form-control" asp-items="ViewBag.CinemaHallId"></select>
	        </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" value="@Model.StartTime.ToString("yyyy-MM-ddTHH:mm")" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
	        <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" value="19" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
